<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingTop="32dp"
    android:background="@drawable/backgound1">

    <ImageView
        android:id="@+id/sair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        app:tint="@color/white"
        android:src="@drawable/baseline_arrow_back_24"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        app:tint="@color/white"
        android:src="@drawable/baseline_account_circle_24"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:paddingBottom="30dp"
        />

    <TextView
        android:id="@+id/msgError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:textSize="20sp"
        android:textColor="@color/red"
        android:text="Credenciais invalidas"
        android:visibility="invisible"
        />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Email -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#fff" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" Ex: joao@gmail.com"
            android:background="@drawable/borda_edittext"
            android:padding="12dp"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="16sp"
            android:drawableLeft="@drawable/email"/>


        <!-- Senha -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#fff" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" * * * * * * * *"
            android:background="@drawable/borda_edittext"
            android:padding="12dp"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:inputType="textPassword"
            android:textSize="16sp"
            android:drawableLeft="@drawable/password1"/>



    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLogin"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/botao"
        android:text="Login"
        android:textColor="#000000"
        android:textSize="16sp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_margin="12dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnRegisterHome"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/botao"
        android:text="Register"
        android:textColor="#000000"
        android:textSize="16sp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_margin="12dp"/>
</LinearLayout>